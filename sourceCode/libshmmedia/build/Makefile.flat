ifeq ($(TARGET_OS), MINGW)
    FLATFLAGS=TVU_MINGW
    D_FLATFLAGS=-DTVU_MINGW
    SUF_BIN=.exe
endif

ifeq ($(TARGET_OS), LINUX)
    FLATFLAGS=TVU_LINUX
    D_FLATFLAGS=-DTVU_LINUX -D__STDC_FORMAT_MACROS -D__STDC_CONSTANT_MACROS
    SUF_BIN=
endif

